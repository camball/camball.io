{
  "name": "camball.io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:archive": "cd apps/archive && vite dev",
    "dev:blog": "cd apps/blog && vite dev",
    "dev:contact": "cd apps/contact && vite dev",
    "dev:main": "cd apps/main && vite dev",
    "dev:resume": "cd apps/resume && vite dev",
    "build": "concurrently --kill-others-on-fail \"pnpm:build:*\"",
    "build:archive": "cd apps/archive && vite build",
    "build:blog": "cd apps/blog && vite build",
    "build:contact": "cd apps/contact && vite build",
    "build:main": "cd apps/main && vite build",
    "build:resume": "cd apps/resume && vite build",
    "preview:archive": "cd apps/archive && vite preview",
    "preview:blog": "cd apps/blog && vite preview",
    "preview:contact": "cd apps/contact && vite preview",
    "preview:main": "cd apps/main && vite preview",
    "preview:resume": "cd apps/resume && vite preview",
    "check": "concurrently --kill-others-on-fail \"pnpm:check:*\"",
    "check:archive": "cd apps/archive && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:blog": "cd apps/blog && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:contact": "cd apps/contact && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:main": "cd apps/main && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:resume": "cd apps/resume && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest",
    "lint": "prettier --check apps/* && eslint apps/*",
    "format": "prettier --write apps/*",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22"
  },
  "//": "Note that mdsvex is locked to 0.12.3. Any higher than that breaks where rehype-toc places the `<nav />`",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@internationalized/date": "^3.8.1",
    "@sveltejs/adapter-vercel": "^5.7.2",
    "@sveltejs/kit": "^2.22.2",
    "@sveltejs/vite-plugin-svelte": "5.1.0",
    "@tailwindcss/typography": "^0.5.14",
    "@tailwindcss/vite": "^4.1.11",
    "@types/eslint": "^9.6.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "mdsvex": "0.12.3",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "svelte": "^5.35.2",
    "svelte-check": "^4.2.2",
    "svelte-loading-spinners": "^0.3.6",
    "svelte-preprocess-import-assets": "^1.1.0",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "dependencies": {
    "@lucide/svelte": "^0.515.0",
    "bits-ui": "^2.8.10",
    "clsx": "^2.1.1",
    "embla-carousel-svelte": "^8.6.0",
    "mode-watcher": "^1.1.0",
    "moment": "^2.30.1",
    "prism-themes": "^1.9.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "rehype-toc": "^3.0.2",
    "rehype-widont": "^0.1.1",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.4.0",
    "tailwind-variants": "^1.0.0",
    "vaul-svelte": "1.0.0-next.7"
  },
  "overrides": {
    "esbuild": ">=0.25.0"
  }
}
